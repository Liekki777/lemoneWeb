<Search />

<!-- OFFCANVAS MÓVIL (se abre desde el botón hamburguesa) -->
<div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="mobileOffcanvas" aria-labelledby="mobileOffcanvasLabel">
  <div class="offcanvas-header border-0">
    <h5 class="offcanvas-title" id="mobileOffcanvasLabel">Menú</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
  </div>
  <div class="offcanvas-body py-2">
    <div class="list-group list-group-flush">
      <a href="/" class="list-group-item list-group-item-action bg-transparent text-white py-3">Inicio</a>
      <a href="/blog" class="list-group-item list-group-item-action bg-transparent text-white py-3">Blog</a>
      <a href="/guias" class="list-group-item list-group-item-action bg-transparent text-white py-3">Guías</a>
      <a href="/destacado" class="list-group-item list-group-item-action bg-transparent text-white py-3">Destacado</a>
      <a href="/noticias" class="list-group-item list-group-item-action bg-transparent text-white py-3">Noticias</a>
      <a href="/tienda" class="list-group-item list-group-item-action bg-transparent text-white py-3">Tienda</a>
