---
// src/components/Navbar.astro
import ThemeToggle from "./ThemeToggle.astro";
import Search from "./Search.astro";
---

<!-- NAVBAR SIMPLE Y ELEGANTE -->
<nav
  class="fixed top-0 left-0 right-0 bg-white/80 dark:bg-[#0d1117]/80 backdrop-blur-sm shadow-lg dark:shadow-black/20 z-50 h-16 transition-colors duration-300"
>
