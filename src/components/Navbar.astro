    <a id="logo-lemone" class="text-gray-900 dark:text-white font-bold text-3xl flex cursor-pointer" href="/">
      {"Lemone".split('').map(char => <span class="inline-block logo-letter">{char}</span>)}
    </a>

    <!-- MENÚ DESKTOP -->
    <div class="hidden lg:flex items-center space-x-8">
      <a
        href="/"
        class="text-gray-600 dark:text-gray-300 text-lg hover:text-gray-900 dark:hover:text-white transition-colors"
        >Inicio</a
      >
      <a
        href="/blog"
        class="text-red-500 font-bold text-lg hover:text-red-600 dark:hover:text-red-400 transition-colors"
        >Blog</a
      >

      <a
        href="/gamesAwards"
        class="text-gray-600 dark:text-gray-300 text-lg hover:text-gray-900 dark:hover:text-white transition-colors"
        >TGA Tickets</a
      >
      <!-- <a href="/destacado" class="text-gray-600 dark:text-gray-300 text-lg hover:text-gray-900 dark:hover:text-white transition-colors">Destacado</a> -->
      <a href="/rankings" class="text-gray-600 dark:text-gray-300 text-lg hover:text-gray-900 dark:hover:text-white transition-colors">Rankings</a>
      <a
        href="/juegos"
        class="text-gray-600 dark:text-gray-300 text-lg hover:text-gray-900 dark:hover:text-white transition-colors"
        >Juegos</a
      >
      <a
        href="/tienda"
        class="text-gray-600 dark:text-gray-300 text-lg hover:text-gray-900 dark:hover:text-white transition-colors"
        >Tienda</a
      >

      <!-- <a href="/dashboard" class="text-gray-600 dark:text-gray-300 text-lg hover:text-gray-900 dark:hover:text-white transition-colors">Dashboard</a> -->
      <button
        type="button"
        id="cartBtnDesktop"
        class="relative text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white p-0 transition-colors"
        aria-label="Abrir carrito"
      >
        <i class="bi bi-cart text-xl"></i>
        <span
          id="cart-count"
          class="absolute -top-1 -right-2 bg-red-500 text-white text-xs font-bold px-1.5 py-0.5 rounded-full"
          style="display:none;">0</span
        >
      </button>
      <ThemeToggle />
      <button
        id="searchBtnDesktop"
        class="flex items-center px-3 py-1.5 border border-gray-400 dark:border-gray-600 text-gray-600 dark:text-gray-300 rounded-md text-sm hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-white transition-colors"
      >
        <i class="bi bi-search"></i> Buscar
      </button>
    </div>

    <!-- BOTÓN BUSCAR (móvil) + HAMBURGUESA (se mantiene para mejoras futuras) -->
    <div class="lg:hidden flex items-center space-x-3">
      <button
        id="searchBtnMobile"
        class="flex items-center px-3 py-1.5 border border-gray-400 dark:border-gray-600 text-gray-600 dark:text-gray-300 rounded-md text-sm hover:bg-gray-100 dark:hover:bg-gray-800"
        aria-label="Buscar"
      >
        <i class="bi bi-search"></i>
      </button>
      <button
        id="mobileMenuBtn"
        class="flex items-center justify-center w-11 h-11 bg-red-500 text-white rounded-full hover:bg-red-600 transition-colors"
        aria-label="Abrir menú"
      >
        <i class="bi bi-list text-3xl"></i>
      </button>
    </div>
  </div>
</nav>

