---
import Layout from '../../layouts/Layout.astro';
import ShoppingCart from '../../components/Shop/ShoppingCart.astro';
import CheckoutForm from '../../components/Shop/CheckoutForm.astro';
---

<Layout title="Carrito de Compras">
  <main class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-extrabold text-gray-900 mb-10 text-center">Tu Carrito</h1>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
      <div>
        <ShoppingCart />
      </div>
      <div>
        <CheckoutForm />
      </div>
    </div>
  </main>
</Layout>
