---
import Layout from '../layouts/Layout.astro';

const API_KEY = "ad004328e48949f8a05b5558407ffdbe";
let zeldaImage = '/images/games/trileros-preview.png'; // Imagen por defecto
let switchImage = '/images/games/trileros-preview.png';
let dkImage = '/images/games/trileros-preview.png';

if (API_KEY) {
  try {
    const [zeldaRes, marioRes, dkRes] = await Promise.all([
      fetch(`https://api.rawg.io/api/games?key=${API_KEY}&search=The+Legend+of+Zelda&ordering=-metacritic&page_size=1`),
      fetch(`https://api.rawg.io/api/games?key=${API_KEY}&search=Mario&ordering=-metacritic&page_size=1`),
      fetch(`https://api.rawg.io/api/games?key=${API_KEY}&search=Donkey+Kong+64&page_size=1`)
    ]);

    const [zeldaData, marioData, dkData] = await Promise.all([
      zeldaRes.json(),
      marioRes.json(),
      dkRes.json()
    ]);

    if (zeldaData.results?.[0]?.background_image) zeldaImage = zeldaData.results[0].background_image;
    if (marioData.results?.[0]?.background_image) switchImage = marioData.results[0].background_image;
    if (dkData.results?.[0]?.background_image) dkImage = dkData.results[0].background_image;

  } catch (error) {
    console.error("Error al obtener imágenes desde RAWG:", error);
  }
}

const rankings = [
  {
    title: 'Ranking de Juegos de Zelda',
    url: '/rankings/ZeldaParallax',
    image: zeldaImage,
    description: 'Un ranking de los mejores juegos de The Legend of Zelda ordenados por Metacritic.',
    count: 10
  },
    {
    title: 'Ranking de Juegos de Switch',
    url: '/rankings/switch2',
    image: switchImage,
    description: 'Un ranking de los mejores juegos de Nintendo Switch ordenados por Metacritic.',
    count: 10
  },
  {
    title: 'Ranking de Donkey Kong',
    url: '/rankings/dk',
    image: dkImage,
    description: 'La historia de Donkey Kong clasificada por la crítica.',
    count: 23
  }
];
---

<Layout title="Rankings de Videojuegos">
  <main class="container mx-auto px-4 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-white mb-4">Rankings de Videojuegos</h1>
      <p class="text-lg text-gray-600 dark:text-gray-300">Explora nuestros rankings de videojuegos.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {rankings.map(ranking => (
        <a href={ranking.url} class="ranking-card opacity-0 group block bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transition-all duration-300 ease-in-out hover:shadow-2xl hover:-translate-y-2">
          <div class="relative">
            <img src={ranking.image} class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110" alt={`Vista previa del ranking ${ranking.title}`} />
            <div class="absolute top-2 right-2 bg-black/60 backdrop-blur-sm text-white text-xs font-bold px-2 py-1 rounded flex items-center gap-1">
              <i class="bi bi-list-ol"></i> {ranking.count} Juegos
            </div>
          </div>
          <div class="p-6">
            <h5 class="text-xl font-bold text-gray-900 dark:text-white mb-2">{ranking.title}</h5>
            <p class="text-gray-700 dark:text-gray-400">{ranking.description}</p>
          </div>
        </a>
      ))}
    </div>
  </main>

  <script>
    import { gsap } from "gsap";

    const cards = document.querySelectorAll(".ranking-card");

    gsap.to(cards, {
      y: 0,
      opacity: 1,
      duration: 0.8,
      stagger: 0.2,
      ease: "power3.out",
      startAt: { y: 50 }, // Comienza desplazado 50px hacia abajo
      onComplete: () => {
        // Limpiamos la transformación para que el hover CSS funcione correctamente después
        gsap.set(cards, { clearProps: "transform" });
      }
    });
  </script>
</Layout>
