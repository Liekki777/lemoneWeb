---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import { getCollection } from 'astro:content';
import Giscus from '../../components/Giscus.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <Navbar />

  <article class="container py-5">
    <header class="mb-5">
      <h1 class="display-5">{post.data.title}</h1>
      <p class="text-muted">
        {post.data.pubDate.toLocaleDateString('es-ES')} • {post.data.author}
      </p>
      {post.data.tags.length > 0 && (
        <div class="mt-3">
          {post.data.tags.map((tag: string) => (
            <span class="badge bg-secondary me-2">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <Content />
    <a href="/blog" class="btn btn-outline-primary mt-4">← Volver al blog</a>
    <Giscus />

<a href="/blog" class="btn btn-outline-secondary mt-4">← Volver al blog</a>
  </article>
</Layout>