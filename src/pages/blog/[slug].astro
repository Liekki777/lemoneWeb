---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Giscus from '../../components/Giscus.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <article class="container mx-auto px-4 py-12 max-w-3xl">
    <header class="mb-8 text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4">{post.data.title}</h1>
      <p class="text-gray-500 text-sm">
        {post.data.pubDate.toLocaleDateString('es-ES')} • {post.data.author}
      </p>
      {post.data.tags.length > 0 && (
        <div class="mt-4 flex flex-wrap justify-center gap-2">
          {post.data.tags.map((tag: string) => (
            <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded-full">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="prose prose-blue max-w-none">
      <Content />
    </div>
    <a href="/blog" class="inline-block border-2 border-blue-600 text-blue-600 font-bold text-lg px-8 py-3 rounded-lg hover:bg-blue-600 hover:text-white transition-colors mt-8">← Volver al blog</a>
    <Giscus />
  </article>
</Layout>