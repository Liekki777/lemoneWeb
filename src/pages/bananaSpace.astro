---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Banana Invaders">
  <main class="container py-4">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm">
          <div class="card-body text-center">
            <h1 class="card-title mb-3">üçå Banana Invaders</h1>

            <div class="ratio ratio-4x3 mx-auto" style="max-width:560px;">
              <canvas id="gameCanvas" width="480" height="320" style="width:100%;height:100%;display:block;border-radius:6px;background:#000;border:4px solid #3E3E5E;box-shadow:0 6px 18px rgba(0,0,0,.35);"></canvas>
            </div>

            <p class="mt-3 text-muted small">Usa las flechas para moverte y espacio para disparar.</p>

            <div class="mt-3">
              <a href="/" class="btn btn-outline-secondary me-2">Volver</a>
              <button id="restartBtn" class="btn btn-primary">Reiniciar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <style>
    /* Estilos locales: coherentes con trileros.astro */
    .card-body { padding: 1.5rem; }
    @media (max-width:576px){
      .card-title { font-size:1.25rem; }
    }
  </style>

  <script src="/scripts/bananaSpace.js" defer></script>
</Layout>
