---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import HeroParallax from '../components/HeroParallax.jsx';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3); // Solo los 3 m√°s nuevos
---
<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    const heroSection = document.querySelector('.hero-section');
    const heroTitleSpans = heroSection?.querySelectorAll('.hero-title span');
    const heroSubtitleSpans = heroSection?.querySelectorAll('.hero-subtitle span');
    const heroButton = heroSection?.querySelector('.hero-button');
    const heroImageRight = heroSection?.querySelector('.hero-image-right');
    const heroImageLeft = heroSection?.querySelector('.hero-image-left');

    if (heroTitleSpans && heroSubtitleSpans && heroButton && heroImageRight && heroImageLeft) {
      const tl = gsap.timeline({
        scrollTrigger: {
          trigger: heroSection,
          start: 'top center', // Inicia la animaci√≥n cuando la parte superior de la secci√≥n llega al centro de la ventana
          // markers: true, // Descomentar para depuraci√≥n
        }
      });

      tl.to(heroTitleSpans, { opacity: 1, y: 0, duration: 0.8, stagger: 0.08, ease: 'power3.out' })
        .to(heroSubtitleSpans, { opacity: 1, y: 0, duration: 0.7, stagger: 0.05, ease: 'power3.out' }, '-=0.6')
        .to(heroImageRight, { opacity: 1, x: '-10%', duration: 1.2, ease: 'power3.out' }, '-=0.7') // Entra desde la derecha con margen
        .to(heroImageLeft, { opacity: 1, x: '10%', scaleX: -1, duration: 1.2, ease: 'power3.out' }, '<') // Entra desde la izquierda, volteada y con margen
        .to(heroButton, { opacity: 1, y: 0, duration: 0.6, ease: 'power3.out' }, '-=1');
    }

    // Efecto de explosi√≥n de bananas al hacer clic
    if (heroButton) {
      heroButton.addEventListener('click', (e) => {
        e.preventDefault(); // Evitamos la navegaci√≥n inmediata
        const href = heroButton.getAttribute('href');
        const rect = heroButton.getBoundingClientRect();
        const centerX = rect.left + rect.width / 2;
        const centerY = rect.top + rect.height / 2;

        // Generamos 30 bananas
        for (let i = 0; i < 30; i++) {
          const banana = document.createElement('div');
          banana.textContent = 'üçå';
          banana.style.position = 'fixed';
          banana.style.left = `${centerX}px`;
          banana.style.top = `${centerY}px`;
          banana.style.fontSize = `${Math.random() * 20 + 20}px`;
          banana.style.pointerEvents = 'none'; // Para que no interfieran con el clic
          banana.style.zIndex = '100';
          document.body.appendChild(banana);

          // Animaci√≥n de explosi√≥n con GSAP
          const angle = Math.random() * Math.PI * 2;
          const velocity = Math.random() * 200 + 100;
          
          gsap.to(banana, {
            x: Math.cos(angle) * velocity,
            y: Math.sin(angle) * velocity + 200, // A√±adimos "gravedad" positiva en Y
            rotation: Math.random() * 720 - 360,
            opacity: 0,
            duration: 1 + Math.random(),
            ease: "power2.out",
            onComplete: () => banana.remove()
          });
        }

        // Navegamos despu√©s de un peque√±o retraso para ver el efecto
        setTimeout(() => {
          if (href) window.location.href = href;
        }, 800);
      });
    }
  });
</script>

<Layout title="LEMONE">
  <!-- Hero brutal -->
  <section class="hero-section bg-gradient-to-br from-amber-800 to-amber-900 text-white overflow-hidden relative">
    <!-- Fondo interactivo con React -->
    <HeroParallax client:load />

    <div class="container mx-auto px-4 py-20 text-center relative z-10">
      <h1 class="hero-title text-5xl md:text-6xl font-extrabold tracking-tight">
        {"¬°Bienvenido a Lemon√©!".split(' ').map((word) => (
          <span class="inline-block opacity-0 translate-y-full">{word}&nbsp;</span>
        ))}
      </h1>
      <p class="hero-subtitle mt-4 mb-8 text-xl md:text-2xl max-w-3xl mx-auto">
        {"Art√≠culos frescos, r√°pidos y con mucho amor".split(' ').map((word) => (
          <span class="inline-block opacity-0 translate-y-full">{word}&nbsp;</span>
        ))}
      </p>
      <a href="/blog" class="hero-button inline-block bg-white text-blue-700 font-bold text-lg px-8 py-4 rounded-lg shadow-lg hover:bg-gray-100 transition-transform transform hover:scale-105 opacity-0 translate-y-8">
        Ir al Blog ‚Üí
      </a>
    </div>
    <img src="/images/lemoneBanana.png" alt="Lemone Banana" class="hero-image-right absolute bottom-0 right-0 w-1/2 max-w-xs opacity-0 translate-x-full z-0" />
    <img src="/images/lemoneBanana.png" alt="Lemone Banana" class="hero-image-left absolute bottom-0 left-0 w-1/2 max-w-xs opacity-0 -translate-x-full z-0" />
  </section>

  <!-- √öltimos posts -->
  <section class="container mx-auto px-4 py-16 sm:py-24">
    <h2 class="text-4xl md:text-5xl font-extrabold text-center mb-12 text-gray-900 dark:text-white">√öltimos art√≠culos</h2>

    {posts.length === 0 ? (
      <p class="text-center text-gray-500 dark:text-gray-400 text-xl">Pronto habr√° contenido... ¬°estate atento!</p>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {posts.map((post: CollectionEntry<'blog'>) => (
          <article class="relative bg-white dark:bg-gray-800 rounded-xl shadow-lg h-full flex flex-col transition-all duration-300 ease-in-out hover:-translate-y-2 hover:shadow-2xl">
            <div class="p-6 flex flex-col flex-grow">
              <h3 class="text-xl font-bold mb-2">
                <a href={`/blog/${post.slug}`} class="text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors stretched-link">
                  {post.data.title}
                </a>
              </h3>
              <p class="text-gray-500 dark:text-gray-400 text-sm mb-3">
                {post.data.pubDate.toLocaleDateString('es-ES')} ‚Ä¢ {post.data.author}
              </p>
              <p class="text-gray-700 dark:text-gray-300 flex-grow">{post.data.description}</p>
              <div class="mt-4 flex gap-2 flex-wrap">
                {post.data.tags.map((tag: string) => (
                  <span class="inline-block bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300 text-xs font-semibold px-2.5 py-0.5 rounded-full">{tag}</span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    )}

    {posts.length > 0 && (
      <div class="text-center mt-12">
        <a href="/blog" class="inline-block border-2 border-blue-600 text-blue-600 font-bold text-lg px-8 py-3 rounded-lg hover:bg-blue-600 hover:text-white transition-colors">
          Ver todos los art√≠culos ‚Üí
        </a>
      </div>
    )}
  </section>

</Layout>