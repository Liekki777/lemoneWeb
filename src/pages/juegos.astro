---
import Layout from '../layouts/Layout.astro';

// --- LISTA DE JUEGOS ---
// Para añadir un nuevo juego, simplemente agrega un objeto a este array.
const games = [
  {
    title: 'Juego de Trileros',
    url: '/trileros', // URL de la página del juego
    image: '/images/games/trileros-preview.png', // Imagen de vista previa
    description: 'Pon a prueba tu atención y encuentra la pelota. ¿Podrás seguirle el ritmo?'
  },
  {
    title: 'Banana Space',
    url: '/bananaSpace',
    image: '/images/games/bananaspace-preview.png',
    description: 'Defiende la galaxia de los invasores en este clásico arcade de disparos.'
  },
   {
    title: 'Poke Cartas',
    url: '/pokeCartas',
    image: '/images/games/pokecard-preview.png',
    description: 'Defiende la galaxia de los invasores en este clásico arcade de disparos.'
  },
  // {
  //   title: 'Próximo Juego',
  //   url: '/proximo-juego',
  //   image: '/images/games/placeholder.png',
  //   description: 'Un nuevo y emocionante juego que llegará pronto.'
  // }
];
---

<Layout title="Galería de Juegos">
  <main class="container mx-auto px-4 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4">Galería de Juegos</h1>
      <p class="text-lg text-gray-600">Haz clic en cualquier juego para empezar a jugar.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {games.map(game => (
        <a href={game.url} class="block bg-white rounded-xl shadow-lg overflow-hidden transition-all duration-300 ease-in-out hover:shadow-2xl hover:-translate-y-2">
          <img src={game.image} class="w-full h-48 object-cover" alt={`Vista previa del juego ${game.title}`} />
          <div class="p-6">
            <h5 class="text-xl font-bold text-gray-900 mb-2">{game.title}</h5>
            <p class="text-gray-700">{game.description}</p>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>