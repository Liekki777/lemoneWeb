<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Columna 1: Navegación -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-4">Navegación</h3>
        <ul class="space-y-2">
          <li><a href="/" class="hover:text-white transition-colors">Inicio</a></li>
          <li><a href="/blog" class="hover:text-white transition-colors">Blog</a></li>
          <li><a href="/tienda" class="hover:text-white transition-colors">Tienda</a></li>
          <li><a href="/juegos" class="hover:text-white transition-colors">Juegos</a></li>
        </ul>
      </div>
      <!-- Columna 2: Recursos -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-4">Recursos</h3>
        <ul class="space-y-2">
          <li><a href="/guias" class="hover:text-white transition-colors">Guías</a></li>
          <li><a href="/destacado" class="hover:text-white transition-colors">Destacado</a></li>
          <li><a href="/noticias" class="hover:text-white transition-colors">Noticias</a></li>
          <li><a href="/dashboard" class="hover:text-white transition-colors font-bold">Dashboard</a></li>
